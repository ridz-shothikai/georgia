# Server Configuration
PORT=5005
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/unified-platform
MONGODB_TEST_URI=mongodb://localhost:27017/unified-platform-test

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Cookie Configuration
COOKIE_SECRET=your-super-secret-cookie-key-change-this-in-production

# CORS Configuration
FRONTEND_URLS=http://localhost:3001,http://localhost:3002,http://localhost:3003

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Security
BCRYPT_SALT_ROUNDS=12

# Admin Configuration
SUPER_ADMIN_EMAIL=admin@platform.com
SUPER_ADMIN_PASSWORD=admin123