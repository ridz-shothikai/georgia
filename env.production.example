# Docker Image Configuration
IMAGE_TAG=cb00aae

# MongoDB Configuration (External MongoDB URL)
# Example: mongodb://username:password@host:27017/database?authSource=admin
# Or: mongodb+srv://username:password@cluster.mongodb.net/database
MONGODB_URI=mongodb://username:password@your-mongodb-host:27017/unified-platform?authSource=admin

# JWT Secrets (USE STRONG RANDOM SECRETS IN PRODUCTION!)
JWT_SECRET=your_jwt_secret_here_change_me
JWT_REFRESH_SECRET=your_refresh_jwt_secret_here_change_me
COOKIE_SECRET=your_cookie_secret_here_change_me

# Frontend URLs (comma-separated)
# Add your domain(s) here, e.g., https://yourdomain.com
FRONTEND_URLS=http://localhost,http://localhost:3000,https://yourdomain.com

# CORS Origin (comma-separated)
# Add your domain(s) here for CORS
CORS_ORIGIN=http://localhost,http://localhost:3000,https://yourdomain.com

# Admin Dashboard Credentials
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=your_admin_password_here

# Nginx Ports (optional, defaults shown)
NGINX_PORT=80
NGINX_HTTPS_PORT=443
