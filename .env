# =============================================================================
# Environment Variables for Docker Production Build
# Copy this file to .env and update with your values
# =============================================================================

# MongoDB Configuration
MONGO_INITDB_ROOT_USERNAME=yamin
MONGO_INITDB_ROOT_PASSWORD=yamin
MONGO_INITDB_DATABASE=unified-platform

# Backend Configuration
NODE_ENV=production
BACKEND_PORT=5005
MONGODB_URI=mongodb://admin:password@mongodb:27017/unified-platform?authSource=admin
MONGODB_TEST_URI=mongodb://admin:password@mongodb:27017/unified-platform?authSource=admin

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
JWT_REFRESH_SECRET=your-super-secret-refresh-key-minimum-32-characters-long
COOKIE_SECRET=your-super-secret-cookie-key-minimum-32-characters-long

# Frontend URLs
FRONTEND_URLS=http://localhost:3000,https://yourdomain.com
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com

# Next.js Public Variables (Available in browser)
NEXT_PUBLIC_API_URL=/api

# App1 Configuration
NEXT_PUBLIC_APP1_NAME=app1

# App2 Configuration
NEXT_PUBLIC_APP2_NAME=app2

# Admin Dashboard Configuration
NEXT_PUBLIC_ADMIN_APP_NAME=admin-dashboard
NEXT_PUBLIC_ADMIN_EMAIL=admin@platform.com
NEXT_PUBLIC_ADMIN_PASSWORD=change-this-password-in-production

NEXT_PUBLIC_BACKEND_API_URL=http://localhost:3000/api

# Nginx Configuration
NGINX_PORT=3000

# Optional: SSL Configuration (uncomment if using SSL)
# SSL_CERTIFICATE_PATH=./ssl/cert.pem
# SSL_CERTIFICATE_KEY_PATH=./ssl/key.pem